{
  "name": "web-pandemic-proto",
  "version": "0.0.1",
  "description": "prototype for pandemic inspired implementation using web technologies",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "typings install && npm run build",
    "build": "tsc && pulp build && mkdirp app/js && browserify index.js -o app/js/index.js",
    "watch": "chokidar 'src/**' -c 'npm run build' --initial",
    "livereload": "livereload app -w 200",
    "clean": "rimraf app/js build output",
    "mrproper": "npm run clean && rimraf node_modules typings .pulp-cache"
  },
  "author": "",
  "dependencies": {
    "fabric": "^1.6.3"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "chokidar-cli": "^1.2.0",
    "livereload": "^0.5.0",
    "mkdirp": "^0.5.1",
    "pulp": "^9.0.1",
    "typescript": "^2.0.0",
    "typings": "^1.3.2",
    "watchify": "^3.7.0"
  }
}
